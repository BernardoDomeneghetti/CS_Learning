@model CasaDoCodigo.Models.Entities.Pedido
@{
    ViewData["Model"] = "Carrinho";
}
<h3>Meu Carrinho</h3>

<div class="panel panel-default">
    <div class="panel-heading">

        <div class="row">
            <div class="col-md-6">
                Item
            </div>
            <div class="col-md-2 text-center">
                Preço Unitário
            </div>
            <div class="col-md-2 text-center">
                Quantidade
            </div>
            <div class="col-md-2">
                <span class="pull-right">
                    Subtotal
                </span>
            </div>
        </div>
    </div>
    <div class="panel-body">
        @{
            foreach (var item in Model.Itens)
            {
                <div class="row row-center linha-produto">
                    <div class="col-md-3">
                        <img class="img-produto-carrinho" src="/images/produtos/large_@(item.Produto.Codigo.ToString("D3")).jpg" />
                    </div>
                    <div class="col-md-3">@(item.Produto.Nome)</div>
                    <div class="col-md-2 text-center">R$ @(item.Produto.Preco)</div>
                    <div class="col-md-2 text-center">
                        <div class="input-group">
                            <span class="input-group-btn">
                                <button onclick="carrinho.decrementAmount(@item.Produto.Codigo)" class="btn btn-default">
                                    <span class="glyphicon-minus"></span>
                                </button>
                            </span>
                            <input id="@item.Produto.Codigo" type="text" onchange="carrinho.SetAmount(@(item.Produto.Codigo), this)"  value="@(item.Quantidade)"
                                   class="form-control text-center" />
                            <span class="input-group-btn">    
                                <button onclick="carrinho.IncrementAmount(@item.Produto.Codigo)" class="btn btn-default" >
                                    <span class="glyphicon-plus"></span>
                                </button>
                            </span>
                        </div>
                    </div>
                    <div class="col-md-2">
                        R$ <span class="pull-right" subtotal>
                            @(item.Produto.Preco * item.Quantidade)
                        </span>
                    </div>
                </div>
            }
        }
    </div>
    <div class="panel-footer">
        <div class="row">
            <div class="col-md-10">
                <span numero-itens>
                    Total: @(Model.Itens.Count)
                </span>
            </div>
            <div class="col-md-2">
                Total: R$ <span class="pull-right" total>
                    419,40
                </span>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="pull-right">
            <a class="btn btn-success" asp-controller="Product" asp-action="Carrossel">
                Adicionar Produtos
            </a>
            <a class="btn btn-success" asp-action="Resumo">
                Finalizar pedido
            </a>
        </div>
    </div>
</div>

@section ImportScripts{ 
    <script src="~/js/CarrinhoScript.js"></script>
}